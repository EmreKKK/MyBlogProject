@model IEnumerable<MyBlogProject.Entity.User>

@{
    ViewBag.Title = "Index";
}

<div class="table-responsive custom-table-responsive">

    <table class="table custom-table">
        <thead>
            <tr>
                <div class="form-group">
                    <div class="col-mx-10">
                        <button type="submit" class="btn btn-outline-dark border-0">
                            <span class="bi bi-plus-circle"></span> Create
                        </button>
                    </div>
                </div>
            </tr>
        </thead>

        <thead>
            <tr>

                <th scope="col"> @Html.DisplayNameFor(model => model.Name)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.Surname)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.Username)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.Email)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.Password)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.IsActive)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.IsAdmin)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.CreateOn)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.ModifiedOn)</th>
                <th scope="col"> @Html.DisplayNameFor(model => model.ModifiedUsername)</th>
                <th scope="col">   </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAdmin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        <a href="/User/Edit/@item.Id" class="btn btn-warning btn-sm" title="Edit">
                            <span class="bi bi-pencil-square"></span>
                        </a>
                        <a href="/User/Details/@item.Id" class="btn btn-info btn-sm" title="Details">
                            <span class="bi bi-clipboard"></span>
                        </a>
                        <a href="/User/Delete/@item.Id" class="btn btn-danger btn-sm" title="Delete">
                            <span class="bi bi-eraser"></span>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>




<script>
    $(document).ready(function () {
        $('#footer').hide();
    });
</script>
