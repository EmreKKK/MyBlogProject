@using MyBlogProject.Entity
@model User

@{
    ViewBag.Title = "ShowProfile";
}



<div class="container">
    <br />
    <br />
    <br />
    <div class="row">
        <h2>@ViewBag.Title</h2>
    </div>

    <div class="row">
        <div class="col-md-2">
            <img src="~/Content/image/@Model.ProfileImageFilename" class="img-circle" width="128" />
        </div>
        <div class="col-md-8">
            <h3>@Model.Name @Model.Surname</h3>
            <br />
            <h6><b>Username:</b>@Model.Username</h6>
            <h6><b>Email:</b>@Model.Email</h6>
            <br />
            <h6><a href="#">More...</a> </h6>
        </div>
        <div class="col-md-2 text-end">
            <div class="dropdown">
                <a class="btn btn-outline-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false"><span class="bi bi-gear-fill">&nbsp; </span>
                    Options
                </a>

                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="@Url.Action("EditProfile")"><span class="bi bi-pencil-square">&nbsp; </span>Edit</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("DeleteProfile")" onclick="return confirm('Are you sure you want to delete?');"><span class="bi bi-eraser">&nbsp; </span>Delete</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#footer').hide();
    });
</script>

